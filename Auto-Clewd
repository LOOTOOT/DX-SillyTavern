#!/bin/bash

# 如果任何命令失败，则退出脚本
set -e

echo "开始部署clewd项目..."

# 检查网络连接
echo "检查网络连接..."
ping -c 1 google.com > /dev/null 2>&1 || { echo "网络连接失败，请检查你的网络设置"; exit 1; }

# 更新软件包信息
echo "更新软件包信息..."
pkg update -y

# 安装Git
if ! command -v git &> /dev/null; then
    echo "安装Git..."
    pkg install git -y
else
    echo "Git已安装，跳过此步骤."
fi

# 安装Node.js
NODE_VERSION="20.4.0"
if ! command -v node &> /dev/null || [[ "$(node -v)" != "v$NODE_VERSION" ]]; then
    echo "安装Node.js..."
    pkg install nodejs -y
    # 如果上面的命令没有安装20.4.0或更高版本的Node.js，您可能需要手动下载并安装它
else
    echo "Node.js已安装，跳过此步骤."
fi

# 克隆clewd仓库
REPO_URL="https://github.com/teralomaniac/clewd.git"
echo "克隆clewd仓库: $REPO_URL"
git clone $REPO_URL || { echo "无法克隆仓库"; exit 1; }

# 进入clewd目录并安装依赖项
echo "进入clewd目录..."
cd clewd

echo "安装依赖项..."
npm install --no-audit --fund false || { echo "安装依赖失败"; exit 1; }

# 运行clewd.js
echo "运行clewd.js..."
node clewd.js || { echo "运行clewd.js失败"; exit 1; }

echo "clewd已经启动！配置文件已创建！
使用文件管理器编辑 config.js 以添加cookie，然后cd clewd 重启"
